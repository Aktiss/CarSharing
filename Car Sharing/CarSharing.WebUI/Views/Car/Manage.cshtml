@using CarSharing.Domain.Entities
@using CarSharing.Domain.Enumerations
@model IEnumerable<Car>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>My Cars</h1>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Type</th>
            <th>Brand</th>
            <th>Build year</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Car car in Model)
        {
            string type = "Unknown";
            if (car.Fueltype == FueltypeEnum.Petrol)
            {
                type = "Petrol";
            }
            else if (car.Fueltype == FueltypeEnum.Diesel)
            {
                type = "Diesel";
            }
            else if (car.Fueltype == FueltypeEnum.CNG)
            {
                type = "CNG";
            }

            <tr>
                <td><img src="@car.ImageURL" class="CarImage" /></td>
                <td>@type</td>
                <td>@car.Brand</td>
                <td>@car.Year</td>
                <td><a asp-controller="Car" asp-action="Details" asp-route-id="@car.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Car" asp-action="AddCar" class="text-decoration-none">Add Car</a>
</div>
